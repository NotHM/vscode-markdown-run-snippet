{
    "name": "vscode-markdown-run-snippet",
    "displayName": "vscode-markdown-run-snippet",
    "description": "",
    "version": "0.0.1",
    "publisher": "statiolake",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.runMarkdownSnippet"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "extension.runMarkdownSnippet",
            "title": "Run Snippet in Markdown"
        }],
        "configuration": {
            "title": "Markdown Run Snippet Configuration",
            "properties": {
                "markdown-run-snippet.typeToExtMap": {
                    "type": "object",
                    "default" :{
                        "rust": "rs"
                    }
                },
                "markdown-run-snippet.typeToTemplateMap": {
                    "type": "object",
                    "default" :{
                        "rust": "fn main() {\n$snippet\n}"
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "extensionDependencies": [
        "formulahendry.code-runner"
    ]
}